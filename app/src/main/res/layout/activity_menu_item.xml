<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/listview_bg"
    android:paddingVertical="12dp">

        <Button
            android:id="@+id/menu_item_btn"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/Transparents_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/menu_item_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/menu_ai"
            android:layout_gravity="center"
            android:tint="@color/item_txt_color"/>

        <TextView
            android:id="@+id/menu_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="이미지 묘사"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/item_txt_color" />
        </LinearLayout>
</RelativeLayout>