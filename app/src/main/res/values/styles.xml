<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/main_bg</item>
        <item name="colorPrimaryDark">@color/dialog_st</item>
        <item name="colorAccent">@color/dialog_st</item>

        <item name="android:textColorPrimary">@color/toolbar_white</item>
        <item name="android:textColorSecondary">@color/select_sullivan_color</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <!--<item name="android:switchPreferenceStyle">@style/AppTheme.switch</item>-->
    </style>

    <style name="FullScreenTheme_white" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
        <item name="actionMenuTextColor">@color/toolbar_white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="FullScreenTheme_gray" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
        <item name="actionMenuTextColor">@color/toolbar_gray</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/dialog_bg</item>
        <item name="android:button">@color/dialog_st</item>
        <item name="android:positiveButtonText">@color/dialog_st</item>
        <item name="android:negativeButtonText">@color/dialog_st</item>
        <item name="android:textColor">@color/dialog_st</item>
        <item name="android:textColorSecondary">@color/dialog_st</item>
        <item name="android:textColorAlertDialogListItem">@color/dialog_st</item>
        <item name="android:textColorPrimary">@color/dialog_st</item>
        <item name="android:thumbTint">@color/Text_Yellow</item>
        <item name="editTextColor">@color/dialog_st</item>
        <item name="colorAccent">@color/dialog_st</item>
        <item name="android:colorAccent">@color/dialog_st</item>
    </style>
    <style name="AppTheme.switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/Text_Yellow</item>
        <item name="colorSwitchThumbNormal">@color/Text_Yellow</item>
        <item name="android:colorFocusedHighlight">@color/toolbar_white</item>
        <item name="android:colorForeground">@color/toolbar_gray</item>
    </style>



    <style name="AppTheme.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/Text_White</item>
    </style>

    <style name="AppThemePreference" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
        <item name="actionMenuTextColor">@color/main_bg</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>
